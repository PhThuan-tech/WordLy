<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom right, #fefefe, #e0f7fa);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.GameController.ScrambleWord.ScrambleGameController">

    <stylesheets>
        <URL value="@../styles/ScrambleStyle.css" />
    </stylesheets>

    <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="20.0" prefHeight="600.0" prefWidth="1000.0" spacing="25" style="-fx-padding: 30;">
        <!-- Tiêu đề -->
        <Label styleClass="title-label" text="🔤 Scramble Word Game" />

        <!-- Thông tin trò chơi -->
        <HBox alignment="CENTER" spacing="40">
            <Label fx:id="scrambledWordLabel" styleClass="scrambled-word" text="scrambled-word" />
            <!-- *** THÊM LABEL CHO ĐIỂM VÁN TRƯỚC Ở ĐÂY *** -->
            <Label fx:id="previousScoreLabel" styleClass="info-label" text="Điểm ván trước: 0" />
            <!-- *** KẾT THÚC THÊM LABEL *** -->
            <Label fx:id="scoreLabel" styleClass="info-label" text="Điểm hiện tại: 0" /> <!-- Đã sửa text mặc định cho rõ ràng hơn -->
            <Label fx:id="timerLabel" styleClass="timer-label" text="⏳ 30s" />
        </HBox>

        <!-- Nhập từ -->
        <TextField fx:id="inputField" promptText="Nhập từ bạn đoán..." styleClass="input-field" />

        <!-- Các nút thao tác -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="checkButton" onAction="#onCheck" styleClass="action-button" text="✅ Kiểm tra" />
            <Button fx:id="nextButton" onAction="#onNext" styleClass="action-button" text="➡ Tiếp theo" />
            <Button fx:id="restartButton" onAction="#onRestart" styleClass="action-button" text="🔁 Chơi lại" />
        </HBox>

        <!-- Kết quả đoán -->
        <Label fx:id="resultLabel" styleClass="result-label" text="" />
        <TextArea fx:id="definitionArea" editable="false" prefHeight="96.0" prefWidth="939.0" wrapText="true" />
        <!-- Độ khó -->
        <HBox alignment="CENTER" spacing="10">
            <Label styleClass="info-label" text="🎯 Độ khó:" />
            <ChoiceBox fx:id="difficultyBox" prefHeight="42.0" prefWidth="116.0" />
        </HBox>

        <!-- Nút quay lại -->
        <Button onAction="#HandleBackToGame" styleClass="back-button" text="⬅ Quay lại" />
    </VBox>
</AnchorPane>
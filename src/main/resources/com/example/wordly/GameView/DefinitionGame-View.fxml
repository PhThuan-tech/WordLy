<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.wordly.GameController.DefinitionGameController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back to Games"/>
            <Label text="Definition Guessing Game" HBox.hgrow="ALWAYS">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Label fx:id="questionCounterLabel" text="Question 1 of 10"/>
            <Label fx:id="scoreLabel" text="Score: 0">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Which definition matches this word?">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            <Label fx:id="wordLabel" text="WordTarget">
                <font>
                    <Font name="System Bold" size="36.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>
            </Label>
            <GridPane fx:id="optionsContainer" hgap="10.0" vgap="10.0" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <Button fx:id="optionButton1" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#handleOptionSelected" text="Option 1" wrapText="true"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"
                        GridPane.vgrow="ALWAYS"/>
                <Button fx:id="optionButton2" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#handleOptionSelected" text="Option 2" wrapText="true"
                        GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"
                        GridPane.vgrow="ALWAYS"/>
                <Button fx:id="optionButton3" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#handleOptionSelected" text="Option 3" wrapText="true"
                        GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"
                        GridPane.vgrow="ALWAYS"/>
                <Button fx:id="optionButton4" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#handleOptionSelected" text="Option 4" wrapText="true"
                        GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"
                        GridPane.vgrow="ALWAYS"/>
            </GridPane>
            <Label fx:id="feedbackLabel" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Label>
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextQuestion" text="Next Word"
                    visible="false">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!-- Root: BorderPane for overall structure -->
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.History.HistoryController">

    <stylesheets>
        <URL value="@../styles/home.css" />
        <URL value="@../styles/historytable.css" /> <!-- Vẫn giữ, sẽ sửa nội dung sau -->
    </stylesheets>

    <left>
        <VBox prefWidth="170.0" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="WORDLY" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Button contentDisplay="RIGHT" graphicTextGap="40.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleBackMain" prefHeight="40.0" text="Back">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/back.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="28.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToSearch" prefHeight="40.0" text="Search">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/dictionary.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToFavourite" prefHeight="40.0" text="Favourite">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/bookmark.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <!-- Disable the History button as this *is* the History view -->
                <Button contentDisplay="RIGHT" disable="true" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="40.0" text="History" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/history.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="18.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoEdit" prefHeight="40.0" text="Edit Word" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/editword.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="37.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoGame" prefHeight="40.0" text="Game">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/game.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="5.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToTranslateAndTTS" prefHeight="50.0" text="Text To Speech" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/TTSicon.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>

                <Region VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
            <children>
                <Label text="History of Words Looked Up" styleClass="history-title" alignment="CENTER" maxWidth="1.7976931348623157E308">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="delHistory" mnemonicParsing="false" onAction="#delHistory" text="Clear History" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </HBox>

                <!-- *** THAY THẾ TableView BẰNG ListView *** -->
                <ListView fx:id="historyListView" VBox.vgrow="ALWAYS">
                    <!-- Không cần định nghĩa columns ở đây -->
                </ListView>
                <!-- *** KẾT THÚC THAY THẾ *** -->

            </children>
        </VBox>
    </center>
</BorderPane>
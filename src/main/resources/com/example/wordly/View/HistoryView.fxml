<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<!-- Root: BorderPane for overall structure -->
<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.History.HistoryController">

    <stylesheets>
        <URL value="@../styles/home.css" />
        <URL value="@../styles/historytable.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="170.0" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="WORDLY" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleBackMain" prefHeight="40.0" text="Main" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToSearch" prefHeight="40.0" text="Search" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToFavourite" prefHeight="40.0" text="Favourite" />
                <!-- Disable the History button as this *is* the History view -->
                <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="40.0" text="History" textAlignment="CENTER" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoEdit" prefHeight="40.0" text="Edit New Word" textAlignment="CENTER" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoGame" prefHeight="40.0" text="Game" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToTranslateAndTTS" prefHeight="50.0" text="Translate &amp; TTS" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Button>

                <Region VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
            <children>
                <Label text="History of Words Looked Up" styleClass="history-title" alignment="CENTER" maxWidth="1.7976931348623157E308">

                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="delHistory" mnemonicParsing="false" onAction="#delHistory" text="Clear History" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </HBox>


                <!-- History TableView -->
                <TableView fx:id="historyTable" pickOnBounds="false" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="wordCol" prefWidth="150.0" text="Word" />
                        <TableColumn fx:id="proCol" prefWidth="130.0" text="Pronunciation" />
                        <TableColumn fx:id="typeCol" prefWidth="85.0" text="Type" />
                        <TableColumn fx:id="meanCol" prefWidth="400.0" text="Meaning" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
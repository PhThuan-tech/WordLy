<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="1000.0" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.AdvanceController">
    <stylesheets>
        <URL value="@../styles/advance_styles.css" />
    </stylesheets>
    <Button fx:id="backButton" layoutX="14.0" layoutY="509.0" mnemonicParsing="false" onAction="#BackToScence" prefHeight="66.0" prefWidth="96.0">
        <graphic>
            <ImageView fitHeight="67.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../icons/back.png" />
            </ImageView>
        </graphic>
    </Button>
    <VBox alignment="CENTER" layoutX="39.0" layoutY="142.0" prefHeight="250.0" prefWidth="303.0" spacing="10" styleClass="content-box">
        <ImageView fitHeight="154.0" fitWidth="267.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/TextToSpeech.png" />
        </ImageView> <!--  Add styleClass="button-container" -->
            <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#GoToTTS" prefHeight="40.0" prefWidth="278.0" text="Translate/Text To Speech">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/TTSicon.png" />
                    </ImageView>
                </graphic>
            </Button>

    </VBox>

    <!-- Add styleClass="content-box" and spacing to the VBox -->
    <VBox alignment="CENTER" layoutX="371.0" layoutY="142.0" prefHeight="254.0" prefWidth="263.0" spacing="10" styleClass="content-box">
        <ImageView fitHeight="150.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/SynAndAn.png" />
        </ImageView> <!--  Add styleClass="button-container" -->
            <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#GoToAnsAndSyn" prefHeight="56.0" prefWidth="231.0" text="WordFinding">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/feature.png" />
                    </ImageView>
                </graphic>
            </Button>

    </VBox>

    <!-- Add styleClass="content-box" and spacing to the VBox -->
    <VBox alignment="CENTER" layoutX="667.0" layoutY="140.0" prefHeight="254.0" prefWidth="295.0" spacing="20.0" styleClass="content-box">
        <ImageView fitHeight="163.0" fitWidth="269.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/chatbot2.png" />
        </ImageView> <!--  Add styleClass="button-container" -->
            <Button alignment="CENTER" graphicTextGap="20.0" mnemonicParsing="false" onAction="#GoToChatBot" prefHeight="61.0" prefWidth="263.0" text="Chat Bot">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/chatbot.png" />
                    </ImageView>
                </graphic>
            </Button>

    </VBox>

    <!-- This label seems unused, but let's keep it -->
    <Label layoutX="614.0" layoutY="406.0" />

    <!-- Add fx:id="titleLabel" to the title Label -->
    <Label fx:id="titleLabel" layoutX="264.0" layoutY="14.0" prefHeight="30.0" prefWidth="540.0" text="Các chức năng nổi bật của ứng dụng" />
     <!-- Adjusted layoutY and prefHeight slightly -->
</AnchorPane>

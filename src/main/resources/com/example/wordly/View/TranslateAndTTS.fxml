<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.TranslateAndTTSController">

    <stylesheets>
        <URL value="@../styles/home.css" />
        <URL value="@../styles/translate.css" />
    </stylesheets>

    <fx:define>
        <ToggleGroup fx:id="sourceLangGroup" />
        <ToggleGroup fx:id="targetLangGroup" />
    </fx:define>


    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <!-- Thanh chọn ngôn ngữ nguồn -->
            <StackPane layoutX="47.0" layoutY="70.0" prefHeight="40.0">
                <VBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <HBox fx:id="sourceLangBox" spacing="10">
                            <ToggleButton onAction="#handleSourceLangSelection" styleClass="lang-toggle"
                                          text="Phát hiện ngôn ngữ" toggleGroup="$sourceLangGroup"/>
                            <ToggleButton onAction="#handleSourceLangSelection" styleClass="lang-toggle" text="Anh"
                                          toggleGroup="$sourceLangGroup"/>
                            <ToggleButton onAction="#handleSourceLangSelection" styleClass="lang-toggle" text="Việt"
                                          toggleGroup="$sourceLangGroup"/>
                            <ToggleButton onAction="#handleSourceLangSelection" styleClass="lang-toggle" text="Pháp"
                                          toggleGroup="$sourceLangGroup"/>
                        </HBox>

                        <MenuButton fx:id="languageMenuButton" styleClass="selected-menu-item">
                            <items>
                                <MenuItem fx:id="itemTrung" onAction="#handleOtherLangSelection" text="Trung"/>
                                <MenuItem fx:id="itemHan" onAction="#handleOtherLangSelection" text="Hàn"/>
                                <MenuItem fx:id="itemNhat" onAction="#handleOtherLangSelection" text="Nhật"/>
                            </items>
                        </MenuButton>

                    </HBox>

                    <Pane prefHeight="2">
                        <Rectangle fx:id="highlightBar" fill="#1a73e8" height="2"/>
                        <Rectangle fx:id="menuSourceHighlightBar" fill="#1a73e8" height="2" visible="false"/>
                    </Pane>
                </VBox>
            </StackPane>


            <!-- Thanh chọn ngôn ngữ đích -->
            <StackPane layoutX="550.0" layoutY="70.0" prefHeight="40.0">
                <VBox>
                    <HBox fx:id="targetLangBox" alignment="CENTER_LEFT" spacing="10" styleClass="selected-menu-item">
                        <ToggleButton onAction="#handleTargetLangSelection" styleClass="lang-toggle" text="Việt"
                                      toggleGroup="$targetLangGroup"/>
                        <ToggleButton onAction="#handleTargetLangSelection" styleClass="lang-toggle" text="Anh"
                                      toggleGroup="$targetLangGroup"/>
                        <ToggleButton onAction="#handleTargetLangSelection" styleClass="lang-toggle" text="Trung"
                                      toggleGroup="$targetLangGroup"/>

                        <MenuButton fx:id="targetLangMenuButton" styleClass="selected-menu-item">
                            <items>
                                <MenuItem onAction="#handleOtherTargetLangSelection" text="Pháp"/>
                                <MenuItem onAction="#handleOtherTargetLangSelection" text="Hàn"/>
                                <MenuItem onAction="#handleOtherTargetLangSelection" text="Nhật"/>
                            </items>
                        </MenuButton>

                    </HBox>
                    <Pane prefHeight="2">
                        <Rectangle fx:id="targetHighlightBar" fill="#1a73e8" height="2"/>
                        <Rectangle fx:id="menuTargetHighlightBar" fill="#1a73e8" height="2" visible="false"/>
                    </Pane>
                </VBox>
            </StackPane>

            <TextArea fx:id="needToTrans" layoutX="47.0" layoutY="110.0" prefHeight="340.0" prefWidth="400.0"
                      promptText="Write or paste text here..." wrapText="true"/>
            <TextArea fx:id="translated" editable="false" layoutX="550.0" layoutY="110.0" prefHeight="339.0"
                      prefWidth="400.0" promptText="Translation will appear here..." wrapText="true"/>
            <Label layoutX="691.0" layoutY="40.0" text="Translated Passage"/>
            <Button fx:id="speak2Button" layoutX="828.0" layoutY="408.0" mnemonicParsing="false"
                    onAction="#handleSpeakTranslated" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/sound-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>


            <Button fx:id="clearInputButton" layoutX="382.0" layoutY="121.0" mnemonicParsing="false"
                    onAction="#handleClearInput" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="59.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/close-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="speak1Button" layoutX="308.0" layoutY="408.0" mnemonicParsing="false"
                    onAction="#handleSpeakOriginal" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/sound-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="stopButton" layoutX="473.0" layoutY="450.0" mnemonicParsing="false"
                    onAction="#handleStopSpeaking" prefHeight="54.0" prefWidth="52.0" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/stop-button.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="loadImageButton" layoutX="365.0" layoutY="407.0" onAction="#showDropZone" prefHeight="38.0"
                    prefWidth="49.0" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="29.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/lens-camera-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <StackPane fx:id="dropPane" layoutX="19.0" layoutY="262.0" prefHeight="150" prefWidth="300"
                       styleClass="drop-zone" visible="false">
                <Label text="Click hoặc kéo-thả ảnh vào đây"/>
            </StackPane>

            <Label layoutX="190.0" layoutY="40.0" text="Original Passage"/>
            <Button fx:id="transButton" layoutX="474.0" layoutY="253.0" mnemonicParsing="false"
                    onAction="#handleTranslating" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/translation-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="recordButton" layoutX="241.0" layoutY="404.0" mnemonicParsing="false"
                    onAction="#handleStartRecording" prefHeight="31.0" prefWidth="55.0" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="36.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/micro-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <AnchorPane fx:id="recordingPane" layoutX="14.0" layoutY="252.0" prefHeight="150.0" prefWidth="400.0"
                        style="-fx-background-color: rgba(0,0,0,0.5);" visible="false">
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="10.0"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">

                    <Label fx:id="realTimeLabel" style="-fx-text-fill: white; -fx-font-size: 24px;"
                           text="Đang nghe..."/>
                    <Region visible="false" HBox.hgrow="ALWAYS"/>

                    <StackPane fx:id="micContainer" prefHeight="60" prefWidth="60">
                        <Circle fx:id="wave1" fill="white" opacity="0.2" radius="20"/>
                        <Circle fx:id="wave2" fill="white" opacity="0.2" radius="20"/>
                        <Circle fx:id="wave3" fill="white" opacity="0.2" radius="20"/>


                        <ImageView fitHeight="40.0" fitWidth="40.0">
                            <Image url="@../icons/micro-for-speaking.png"/>
                        </ImageView>
                    </StackPane>

                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </HBox>
            </AnchorPane>
            <Button fx:id="stopRecordingBtn" layoutX="247.0" layoutY="406.0" mnemonicParsing="false"
                    onAction="#handleStopRecording" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="37.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/stopRecord-icon.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="copyButton" layoutX="884.0" layoutY="408.0" mnemonicParsing="false" onAction="#handleCopy"
                    prefHeight="21.0" prefWidth="32.0" styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="33.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/copy.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <StackPane fx:id="copyNotificationLabel" layoutX="422.0" layoutY="183.0" opacity="0" prefHeight="67.0"
                       prefWidth="146.0" styleClass="copy-pane" visible="false">
                <Label text="Đã copy ✅"/>
            </StackPane>


            <Button layoutX="40.0" layoutY="541.0" mnemonicParsing="false" onAction="#backToAdvance" prefHeight="50.0"
                    prefWidth="76.0" style="-fx-background-color: transparent;">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../icons/back.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </AnchorPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.TranslateAndTTSController">

    <stylesheets>
        <URL value="@../styles/home.css" />
        <URL value="@../styles/translate.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="170.0" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="WORDLY">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Button contentDisplay="RIGHT" graphicTextGap="40.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleBackMain" prefHeight="40.0" text="Back">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/back.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="28.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToSearch" prefHeight="40.0" text="Search">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/dictionary.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToFavourite" prefHeight="40.0" text="Favourite">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/bookmark.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToHistory" prefHeight="40.0" text="History" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/history.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="18.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoEdit" prefHeight="40.0" text="Edit Word" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/editword.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="37.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoGame" prefHeight="40.0" text="Game">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/game.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" disable="true" graphicTextGap="5.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="50.0" text="Text To Speech" textAlignment="CENTER" wrapText="true">

                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/TTSicon.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="25.0" mnemonicParsing="false" onAction="#handleGoToChat" prefHeight="53.0" prefWidth="154.0" text="ChatBot" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/chatbot.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Region VBox.vgrow="ALWAYS" />

            </children>
        </VBox>
    </left>
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>

             <TextArea fx:id="needToTrans" layoutX="37.0" layoutY="109.0" prefHeight="340.0" prefWidth="342.0" promptText="Write or paste text here..." wrapText="true" />
                <TextArea fx:id="translated" editable="false" layoutX="433.0" layoutY="110.0" prefHeight="339.0" prefWidth="367.0" promptText="Translation will appear here..." wrapText="true" />
                <Label layoutX="558.0" layoutY="76.0" text="Translated Passage" />
                <Button fx:id="speak2Button" layoutX="676.0" layoutY="408.0" mnemonicParsing="false" onAction="#handleSpeakTranslated" styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/sound-icon.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>


                 <Button fx:id="clearInputButton" layoutX="325.0" layoutY="110.0" mnemonicParsing="false" onAction="#handleClearInput" styleClass="icon-button">
                     <graphic>
                         <ImageView fitHeight="59.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                             <image>
                                 <Image url="@../icons/close-icon.png" />
                             </image>
                         </ImageView>
                     </graphic>
                 </Button>

                <Button fx:id="speak1Button" layoutX="247.0" layoutY="407.0" mnemonicParsing="false" onAction="#handleSpeakOriginal" styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/sound-icon.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
            <Button fx:id="stopButton" layoutX="378.0" layoutY="466.0" mnemonicParsing="false" onAction="#handleStopSpeaking" prefHeight="54.0" prefWidth="52.0" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="42.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/stop-button.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
             <Button fx:id="loadImageButton" layoutX="312.0" layoutY="405.0" onAction="#showDropZone" prefHeight="38.0" prefWidth="49.0" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="29.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/lens-camera-icon.png" />
                     </image>
                  </ImageView>
               </graphic></Button>

             <StackPane fx:id="dropPane" layoutX="19.0" layoutY="262.0" prefHeight="150" prefWidth="300" styleClass="drop-zone" visible="false">
                 <Label text="Click hoặc kéo-thả ảnh vào đây" />
             </StackPane>

             <Label layoutX="157.0" layoutY="76.0" text="Original Passage" />
                  <Button fx:id="transButton" layoutX="379.0" layoutY="262.0" mnemonicParsing="false" onAction="#handleTranslating" styleClass="icon-button">
                      <graphic>
                          <ImageView fitHeight="40.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../icons/translation-icon.png" />
                              </image>
                          </ImageView>
                      </graphic>
            </Button>
            <Button fx:id="recordButton" layoutX="181.0" layoutY="402.0" mnemonicParsing="false" onAction="#handleStartRecording" prefHeight="31.0" prefWidth="55.0" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/micro-icon.png" />
                     </image></ImageView>
               </graphic></Button>
             <AnchorPane fx:id="recordingPane" layoutX="14.0" layoutY="252.0" prefHeight="150.0" prefWidth="400.0" style="-fx-background-color: rgba(0,0,0,0.5);" visible="false">
                 <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                     <Label fx:id="realTimeLabel" style="-fx-text-fill: white; -fx-font-size: 24px;" text="Đang nghe..." />
                     <Region visible="false" HBox.hgrow="ALWAYS" />

                     <!-- StackPane chứa vòng tròn + icon micro -->
                     <StackPane fx:id="micContainer" prefHeight="60" prefWidth="60">
                         <!-- Các vòng tròn bập bùng -->
                         <Circle fx:id="wave1" fill="white" opacity="0.2" radius="20" />
                         <Circle fx:id="wave2" fill="white" opacity="0.2" radius="20" />
                         <Circle fx:id="wave3" fill="white" opacity="0.2" radius="20" />

                         <!-- Ảnh micro nằm trên cùng -->
                         <ImageView fitHeight="40.0" fitWidth="40.0">
                             <Image url="@../icons/micro-for-speaking.png" />
                         </ImageView>
                     </StackPane>

                     <padding>
                         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                 </HBox>
             </AnchorPane>
            <Button fx:id="stopRecordingBtn" layoutX="189.0" layoutY="406.0" mnemonicParsing="false" onAction="#handleStopRecording" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="37.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/stopRecord-icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="copyButton" layoutX="738.0" layoutY="407.0" mnemonicParsing="false" onAction="#handleCopy" prefHeight="21.0" prefWidth="32.0" styleClass="icon-button">
               <graphic>
                  <ImageView fitHeight="33.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/copy.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>






         </children>
      </AnchorPane>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.TranslateAndTTSController">

    <stylesheets>
        <URL value="@../styles/home.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="170.0" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="WORDLY">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Button contentDisplay="RIGHT" graphicTextGap="40.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleBackMain" prefHeight="40.0" text="Back">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/back.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="28.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToSearch" prefHeight="40.0" text="Search">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/dictionary.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToFavourite" prefHeight="40.0" text="Favourite">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/bookmark.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="20.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToHistory" prefHeight="40.0" text="History" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/history.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="18.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoEdit" prefHeight="40.0" text="Edit Word" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/editword.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="37.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoGame" prefHeight="40.0" text="Game">
                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/game.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" disable="true" graphicTextGap="5.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="50.0" text="Text To Speech" textAlignment="CENTER" wrapText="true">

                    <graphic>
                        <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/TTSicon.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button contentDisplay="RIGHT" graphicTextGap="25.0" mnemonicParsing="false" onAction="#handleGoToChat" prefHeight="53.0" prefWidth="154.0" text="ChatBot" textAlignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/chatbot.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Region VBox.vgrow="ALWAYS" />

            </children>
        </VBox>
    </left>

    <center>
        <GridPane hgap="15.0" vgap="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" percentWidth="45.0" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" percentWidth="45.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                <RowConstraints minHeight="200.0" prefHeight="400.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="NEVER" />
            </rowConstraints>
            <children>
                <Label text="Original Passage" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <Label text="Translated Passage" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
                <TextArea fx:id="needToTrans" prefHeight="226.0" prefWidth="358.0" promptText="Write or paste text here..." wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextArea fx:id="translated" editable="false" prefHeight="226.0" prefWidth="367.0" promptText="Translation will appear here..." wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <children>
                        <Button fx:id="transButton" mnemonicParsing="false" onAction="#handleTranslating">
                            <graphic>
                                <ImageView fitHeight="28.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/translate.png" />
                                    </image>
                                </ImageView>
                            </graphic></Button>
                    </children>
                </VBox>

                <Button fx:id="speak1Button" mnemonicParsing="false" onAction="#handleSpeakOriginal" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/Audio.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button fx:id="speak2Button" mnemonicParsing="false" onAction="#handleSpeakTranslated" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="2">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../icons/Audio.png" />
                            </image>
                        </ImageView>
                    </graphic></Button>
                <Button fx:id="loadImageButton" mnemonicParsing="false" onAction="#handleLoadImage" text="choose image" />
            </children>
        </GridPane>
    </center>
</BorderPane>

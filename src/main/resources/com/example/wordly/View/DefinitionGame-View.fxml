<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.wordly.GAME.DefinitionGameController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="Back to Games"/>
                <Label text="Definition Guessing Game" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Label fx:id="scoreLabel" text="Score: 0">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Which definition matches this word?">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="wordLabel" text="WordTarget">
                    <font>
                        <Font name="System Bold" size="36.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Label>
                <VBox fx:id="optionsContainer" alignment="CENTER" spacing="10.0">
                    <children>
                        <!-- Buttons will be dynamically added here if preferred,
                             or predefined like below. Predefined is easier for simple FXML. -->
                        <Button fx:id="optionButton1" maxWidth="Infinity" mnemonicParsing="false"
                                onAction="#handleOptionSelected" prefHeight="40.0" text="Option 1" wrapText="true"/>
                        <Button fx:id="optionButton2" maxWidth="Infinity" mnemonicParsing="false"
                                onAction="#handleOptionSelected" prefHeight="40.0" text="Option 2" wrapText="true"/>
                        <Button fx:id="optionButton3" maxWidth="Infinity" mnemonicParsing="false"
                                onAction="#handleOptionSelected" prefHeight="40.0" text="Option 3" wrapText="true"/>
                        <Button fx:id="optionButton4" maxWidth="Infinity" mnemonicParsing="false"
                                onAction="#handleOptionSelected" prefHeight="40.0" text="Option 4" wrapText="true"/>
                    </children>
                    <padding>
                        <Insets left="50.0" right="50.0"/>
                    </padding>
                </VBox>
                <Label fx:id="feedbackLabel" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextQuestion" text="Next Word"
                        visible="false">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
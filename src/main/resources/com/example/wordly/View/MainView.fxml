<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.MainController">
   <children>
      <Label layoutX="-70.0" layoutY="39.0" prefHeight="71.0" prefWidth="430.0" styleClass="title-text" text="WORDLY">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Pane layoutY="-1.0" prefHeight="600.0" prefWidth="270.0">
         <children>
            <Button fx:id="menuScence" layoutX="24.0" layoutY="150.0" mnemonicParsing="false" onAction="#switchToHomeScence" prefHeight="41.0" prefWidth="222.0" styleClass="custom-button" text="Màn hình chính" />
            <Button fx:id="features" layoutX="24.0" layoutY="258.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="222.0" styleClass="custom-button" text="Tính năng" />
            <Button fx:id="HowToUse" layoutX="24.0" layoutY="366.0" mnemonicParsing="false" onAction="#handleGoToUsing" prefHeight="42.0" prefWidth="222.0" styleClass="custom-button" text="Hướng dẫn sử dụng" />
         </children>
      </Pane>
   </children>

   <!-- Dung scence builder ma ko load dc CSS thi dung cau lenh nay -->
   <stylesheets>
      <URL value="@../styles/mainsce.css" />
   </stylesheets>

</AnchorPane>

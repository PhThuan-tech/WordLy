<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="anchor-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.MainController">

   <stylesheets>
      <URL value="@../styles/mainsce.css" />
   </stylesheets>

   <left>
      <VBox prefWidth="250.0" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-border-color: lightgrey; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="30.0" right="20.0" bottom="20.0" left="20.0" />
         </padding>
         <children>
            <Label text="WORDLY" style="-fx-font-size: 24px; -fx-font-weight: bold;">
               <VBox.margin>
                  <Insets bottom="30.0" /> <!-- Space below sidebar title -->
               </VBox.margin>
            </Label>

            <!-- Navigation Buttons -->
            <Button fx:id="menuScence" mnemonicParsing="false" onAction="#switchToHomeScence" prefHeight="45.0" maxWidth="1.7976931348623157E308" styleClass="custom-button" text="Màn hình chính" VBox.vgrow="NEVER" />
            <Button fx:id="features" mnemonicParsing="false" prefHeight="45.0" maxWidth="1.7976931348623157E308" styleClass="custom-button" text="Tính năng" VBox.vgrow="NEVER" /> <!-- Add onAction if needed -->
            <Button fx:id="HowToUse" mnemonicParsing="false" onAction="#handleGoToUsing" prefHeight="45.0" maxWidth="1.7976931348623157E308" styleClass="custom-button" text="Hướng dẫn sử dụng" VBox.vgrow="NEVER" />

            <Region VBox.vgrow="ALWAYS" /> <!-- Pushes elements upwards if space allows -->

         </children>
      </VBox>
   </left>

   <!-- Center Content Area -->
   <center>
      <!-- StackPane is good for overlaying or centering single items -->
      <StackPane BorderPane.alignment="CENTER">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
         </padding>
         <children>
            <!-- Main Content Title - Now centered within the main area -->
            <Label styleClass="title-text" text="Chào mừng đến với WORDLY!"> <!-- Changed text for context -->
               <!-- Inline font definition is okay, but prefer CSS if possible -->
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
               <!-- StackPane centers its children by default -->
            </Label>
            <!-- Add other main view content here inside the StackPane or replace StackPane -->
            <!-- For example, use a VBox here if you need multiple elements stacked vertically -->
         </children>
      </StackPane>
   </center>

</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordly.controllerForUI.SearchViewController">

    <stylesheets>
        <URL value="@../styles/home.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="170.0" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="WORDLY" style="-fx-font-size: 18px; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleBackMain" prefHeight="40.0" text="Main" />
                <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="40.0" text="Search" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToFavourite" prefHeight="40.0" text="Favourite" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToHistory" prefHeight="40.0" text="History" textAlignment="CENTER" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoEdit" prefHeight="40.0" text="Edit New Word" textAlignment="CENTER" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGotoGame" prefHeight="40.0" text="Game" />
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGoToTranslateAndTTS" prefHeight="50.0" text="Translate &amp; TTS" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Button>

                <Region VBox.vgrow="ALWAYS" />

            </children>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="From:"/>
                        <ChoiceBox fx:id="langFromChoice" prefWidth="100.0" />
                        <Label text="To:"/>
                        <ChoiceBox fx:id="langToChoice" prefWidth="100.0" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>

                <!-- Search Bar Row -->
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="searchBar" promptText="Enter word to search..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchButtonOnClick" text="Search" />
                    </children>
                </HBox>

                <Label fx:id="statusLabel" style="-fx-text-fill: red; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets top="5.0" bottom="5.0"/>
                    </VBox.margin>
                </Label>


                <!-- Word Details Row using GridPane for alignment -->
                <GridPane hgap="10.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0"/>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" />
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Pronunciation:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="proLabel" text="[pronunciation]" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Button fx:id="speakButton" mnemonicParsing="false" onAction="#handleSpeakButtonOnAction" text="Speak" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                        <Label text="Type:" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                        <Label fx:id="typeLabel" text="[type]" GridPane.columnIndex="4" GridPane.rowIndex="0" />

                        <Button fx:id="addToFavouriteButton" mnemonicParsing="false" text="Add to Favourite" GridPane.columnIndex="5" GridPane.rowIndex="0" GridPane.halignment="RIGHT" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </GridPane>


                <Label text="Meaning:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="meaningText" editable="false" prefHeight="150.0" promptText="Meaning will appear here..." wrapText="true" VBox.vgrow="ALWAYS" />

                <Label text="Example:" style="-fx-font-weight: bold;" />
                <TextArea fx:id="exampleText" editable="false" prefHeight="100.0" promptText="Example usage will appear here..." wrapText="true" VBox.vgrow="SOMETIMES" />

            </children>
        </VBox>
    </center>
</BorderPane>